<Window x:Class="SplitImageMaker.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:SplitImageMaker.Views"
        Title="Split Image Maker" Height="900" Width="1400"
        KeyDown="Window_KeyDown">
    <Window.Resources>
        <local:IsSelectedToBrushConverter x:Key="IsSelectedToBrushConverter" />
        <local:IsSelectedToThicknessConverter x:Key="IsSelectedToThicknessConverter" />
    </Window.Resources>
    <DockPanel>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="10" Background="LightGray" Orientation="Horizontal">
                <Label Content="Grid:" VerticalAlignment="Center" Margin="5,0,0,0"/>
                <TextBox x:Name="RowsTextBox" Width="40" Text="{Binding GridConfig.Rows, Mode=TwoWay}" VerticalAlignment="Center"/>
                <Label Content="x" VerticalAlignment="Center" Margin="2,0"/>
                <TextBox x:Name="ColsTextBox" Width="40" Text="{Binding GridConfig.Columns, Mode=TwoWay}" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button Content="Set Grid" Click="SetGrid_Click" Margin="5"/>
                <Button Content="Paste (Ctrl+V)" Click="PasteImage_Click" Margin="5"/>
                <Button Content="Save Combined Image" Click="SaveCombinedImage_Click" Margin="20,5" FontWeight="Bold"/>
            </StackPanel>

            <Grid Grid.Row="1" Margin="10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="5"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="380"/>
                    </Grid.RowDefinitions>

                    <Grid x:Name="MainSplitGrid" Grid.Row="0" Background="DarkGray" />

                    <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="Gray"/>

                    <Grid Grid.Row="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Label Grid.Row="0" Content="Combined Image Preview" HorizontalAlignment="Center" FontWeight="Bold"/>
                        <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="5" ClipToBounds="True">
                            <Viewbox Stretch="Uniform">
                                <Grid Width="160" Height="90" Background="WhiteSmoke">
                                    <Image Source="{Binding CombinedPreviewImage}" RenderOptions.BitmapScalingMode="HighQuality"/>
                                </Grid>
                            </Viewbox>
                        </Border>
                    </Grid>
                </Grid>

                <GridSplitter Grid.Column="1" HorizontalAlignment="Stretch" Background="Gray"/>

                <Grid Grid.Column="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Label Grid.Row="0" Content="Panel Information" HorizontalAlignment="Center" FontWeight="Bold" />
                    <Border Grid.Row="1" BorderBrush="Black" BorderThickness="1" Margin="5">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <ItemsControl ItemsSource="{Binding Panels}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border Margin="2" Padding="5" BorderThickness="{Binding IsSelected, Converter={StaticResource IsSelectedToThicknessConverter}}" BorderBrush="{Binding IsSelected, Converter={StaticResource IsSelectedToBrushConverter}}">
                                            <StackPanel>
                                                <TextBlock Text="{Binding DisplayText}" FontWeight="Bold"/>
                                                <TextBlock Text="{Binding ImageDimensionsText}" Foreground="DarkSlateGray" Margin="10,0,0,5"/>

                                                <TextBlock Text="Caption:" FontWeight="SemiBold" Margin="10,5,0,0"/>
                                                <TextBox Text="{Binding Caption, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                                                         Margin="10,2,0,0" FontSize="12" AcceptsReturn="True" TextWrapping="Wrap"/>
                                            </StackPanel>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </ScrollViewer>
                    </Border>

                    <StatusBar Grid.Row="2" Margin="5">
                        <TextBlock Text="{Binding StatusText}"/>
                    </StatusBar>
                </Grid>
            </Grid>
        </Grid>
    </DockPanel>
</Window>